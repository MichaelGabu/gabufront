.modal
	box-sizing border-box
	display none
	right 0
	max-height 95vh
	max-width 90%
	overflow auto
	position fixed
	top 50% !important
	transform translate(150%,-50%) !important
	transition .3s
	width 1000px
	border-radius 1.5rem 0 0 1.5rem
	@media (max-width 500px)
		max-width 100%
		max-height 100vh
		border-radius 0
	&.open
		transform translate(0,-50%) !important
	&.center
		left 50%
		right inherit
		transform translate(-50%,-50%) !important
		border-radius 1.5rem 0 1.5rem 1.5rem
		@media (max-width 500px)
			border-radius 0
		&.open
			transform translate(-50%,-50%) !important
	&.medium
		width 600px
	.modal-content
		background light-color
		padding 3rem 3rem 2rem
		@media(max-width 700px)
			padding 2rem
		@media(max-width 500px)
			padding 2rem 1.2rem 1.2rem
		h2 
			font-size 40px
			text-transform uppercase
			margin 0 0 1.5rem
		h3 
			font-size 24px
		.response
			> div
				position relative
				z-index 1
				margin-top 1rem
	.modal-footer
		background light-color
		border-top 1px dashed lightness(grey, 80)
		padding 1rem 2rem
		@media(max-width 500px)
			padding 1.2rem
	&.bottom-sheet
		max-width 100%
		left 0
		right 0
		bottom 0
		top initial !important
		transform none !important
		width 100%
		z-index -1 !important
		&.open
			z-index 1003 !important
		.modal-header
			background none
			padding 1rem 2rem
			h2
				font-size 60px
				color primary-color
				margin 0