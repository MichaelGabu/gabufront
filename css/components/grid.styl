.grid
	display flex
	flex-wrap wrap
	&.out-margin
		margin 0 -.5rem
	&.h-full
		min-height 100%
	> .grid-item
		display flex
		flex-wrap wrap
		box-sizing border-box
		// Width
		&.w1
			width (100% / 12) * 1
		&.w2
			width (100% / 12) * 2
		&.w3
			width (100% / 12) * 3
		&.w4
			width (100% / 12) * 4
		&.w1
			width (100% / 12) * 1
		&.w5
			width (100% / 12) * 5
		&.w6
			width (100% / 12) * 6
		&.w7
			width (100% / 12) * 7
		&.w8
			width (100% / 12) * 8
		&.w9
			width (100% / 12) * 9
		&.w10
			width (100% / 12) * 10
		&.w11
			width (100% / 12) * 11
		&.w12
			width (100% / 12) * 12
			// Medium
		@media medium
			&.m-w1
			width (100% / 12) * 1
			&.m-w2
				width (100% / 12) * 2
			&.m-w3
