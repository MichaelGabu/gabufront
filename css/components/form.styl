.input-field
	position relative
	margin-bottom 1.5rem
	width 100%
	text-align left
	> label
		font-size 12px
		color light-color
		display inline-block
		background secondary-color
		padding .5rem 1rem .3rem
		position relative
		z-index 1
		border-radius 15px 15px 15px 0
		&.required-field
			&:before
				content ''
				display inline-block
				width 8px
				height 8px
				background red
				border-radius 50%
				position absolute
				top 0
				right 0
		> .material-icons
			display inline-block
			vertical-align middle
			margin -8px 0 -6px .3rem
			font-size 20px
	.error
		> p 
			color red
			padding .5rem 1rem .3rem
			border-radius 15px 0 15px 15px
			font-size 14px
			font-style italic
	> .material-icons
		position absolute
		bottom .55rem
		right 1rem
		background light-color
		color primary-color
	.switch
		border-left 1px solid secondary-color
		border-bottom 1px solid secondary-color
		border-radius 0 0 0 20px
		padding 1rem 1rem .7rem
		color grey
	> ul
		border-left 1px solid secondary-color
		border-bottom 1px solid secondary-color
		border-radius 0 0 0 20px
		padding 1rem 1rem .7rem
		color grey
		> li
			display inline-block
			margin .15rem 0
			> p 
				display block
				margin 0
				line-height initial
	.btn
		margin 0
	&.file-field
		.btn
			position absolute
			right .5rem
			bottom 0
			overflow hidden
			input[type=file]
				opacity 0
				position absolute
				top 0
				left 0
				right 0
				bottom 0
				cursor pointer
				z-index 1
				
.required-field-g
	&:after
		content ''
		display inline-block
		width 8px
		height 8px
		background red
		border-radius 50%
		position relative
		transform translate(0,-100%)
		margin-left .2rem
				
.required-fields
	color red
	display block
	padding .5rem 0
	margin 0 0 1rem
	position relative
	font-size 14px
	&:after
		content ''
		width 8px
		height 8px
		display inline-block
		background red
		border-radius 50%
		margin 0 0 0 .3rem
		position relative
		transform translate(0,-6px)
		
label
	&.required-field
		@extend .input-field > label.required-field

input
	width 100%
	background none
	font-family primary-font
	font-size 16px
	color grey
	border none
	border-left 1px solid secondary-color
	border-bottom 1px solid secondary-color
	border-radius 0 0 0 20px
	padding 1rem 1rem .7rem
	box-sizing border-box
	&:focus
		border-color primary-color
	&:disabled
		border-top-color transparent
		border-left-color transparent
		border-right-color transparent
		border-bottom 1px dashed lightness(grey, 70)
		font-weight 700
	&[type=date]
		padding 1rem 1rem .387rem
	&[type=radio]
		width auto
		display none
		+ label
			display inline-block
			align-items center
			margin 0 1rem 0 0
			position relative
			padding 0 0 0 2rem
			&:before
				content ''
				width 20px
				height 20px
				min-width 20px
				display inline-block
				margin 0 .5rem 0 0
				border-radius 50%
				border 2px solid radio-color
				font-size 20px
				box-sizing border-box
				position absolute
				top 50%
				left 0
				transform translate(0,-50%)
			&:after
				content ''
				background radio-color
				width 0
				height 0
				transition .3s
				position absolute
				top 50%
				left 10px
				transform translate(-50%,-50%)
				border-radius 50%
		&:checked
			+ label
				&:after
					width 14px
					height 14px
	&[type=checkbox]
		width auto
		display none
		+ label
			display inline-flex
			align-items center
			margin 0 1rem 0 0
			position relative
			cursor pointer
			&:before
				content ''
				width 16px
				height 16px
				display inline-block
				margin 0 .5rem 0 0
				border-radius 6px 0 6px 6px
				border 3px solid checkbox-color
				font-size 16px
				transition .3s
			&:after
				content ''
				width 0
				height 0
				transition .3s
				position absolute
				top 50%
				left 10px
				transform translate(-50%,-50%) rotate(0deg)
				border-left 3px solid light-color
				border-bottom 3px solid light-color
				opacity 0
		&:checked
			+ label
				&:before
					background checkbox-color
				&:after
					width 9px
					transform translate(-50%,-75%) rotate(-45deg)
					height 3px
					opacity 1

textarea.materialize-textarea
	background none
	border none
	border-bottom 1px solid secondary-color
	border-left 1px solid secondary-color
	border-radius 0 0 0 20px
	box-shadow none
	box-sizing content-box
	color grey
	font-family primary-font
	font-size 16px
	min-height 3rem
	outline none
	overflow hidden
	padding 1rem 1rem .7rem
	transition all .3s
	width calc(100% - 2rem)
	&:focus
		border-color primary-color
	&:disabled
		border-top-color transparent
		border-left-color transparent
		border-right-color transparent
		border-bottom 1px dashed lightness(grey, 70)
		font-weight 700

.select-wrapper
	position relative
	select
		display none
	.select-dropdown
		position relative
		z-index 1
		&.active
			border-radius 0
	.caret
		color primary-color
		position absolute
		font-size 12px
		top 50%
		right 1rem
		font-size 0
		transform translate(0,-50%)
		width 17px
		height 17px
		background url('../img/parts/arrow-select.svg') no-repeat center
		background-size contain
		z-index 0
	.dropdown-content
		display none
		z-index 10
		overflow auto
		max-height 298px
		> li
			display block
			background primary-color
			color light-color
			font-size 16px
			padding .7rem 1rem
			cursor pointer
			border-bottom 1px solid light-color
			&:nth-child(2n+1)
				background primary-color
			&:hover
				background lightness(primary-color, 65)
				color light-color
			&.disabled
				height 20px
				background none
				color transparent

// Switch
.switch
.switch *
	-webkit-user-select: none;
	-moz-user-select: none;
	-khtml-user-select: none;
	-ms-user-select: none;

.switch
	padding 1.224rem 1rem .601rem
	label
		cursor pointer
		input[type=checkbox]
			opacity 0
			width 0
			height 0
			&:checked + .lever
				background-color rgba(switch-color, .5)
				&:after
					background-color switch-color

.switch
	label
		.lever
			content ""
			display inline-block
			position relative
			width 40px
			height 15px
			background-color rgba(grey, .5)
			border-radius 15px
			margin-right 10px
			transition background 0.3s ease
			vertical-align middle
			margin 0 16px
			&:after
				content ""
				position absolute
				display inline-block
				width 21px
				height 21px
				background-color grey
				border-radius 21px
				left -5px
				top -3px
				transition left 0.3s ease, background .3s ease, box-shadow 0.1s ease

// Switch active style
input[type=checkbox]:checked:not(:disabled) ~ .lever:active:after
	box-shadow: 0 1px 3px 1px rgba(0,0,0,.4), 0 0 0 15px transparentize(primary-color, .9);

input[type=checkbox]:not(:disabled) ~ .lever:active:after
	box-shadow: 0 1px 3px 1px rgba(0,0,0,.4), 0 0 0 15px rgba(0, 0, 0, .08);

.switch label input[type=checkbox]:checked + .lever:after
	left: 24px;

// Disabled Styles
.switch input[type=checkbox][disabled] + .lever
	cursor: default;

.switch label input[type=checkbox][disabled] + .lever:after
.switch label input[type=checkbox][disabled]:checked + .lever:after
	background-color: primary-color;