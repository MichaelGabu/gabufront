.material-tooltip
    padding .5rem 2rem
    font-size 1rem
    z-index 9 !important
    background-color transparent
    border-radius 2px
    color light-color
    line-height 1
    border-radius 50px
    opacity 0
    display none
    position absolute
    text-align center
    max-width calc(100% - 4px)
    overflow hidden
    left 0
    top 0
    will-change top, left
    background rgba(black, .8)

.backdrop
    display none !important
    position absolute
    opacity 0
    height 7px
    width 14px
    background-color primary-color
    z-index -1
    transform-origin (50% 10%)

    will-change transform, opacity

