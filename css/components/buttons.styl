.btns
	display flex
	flex-wrap wrap
	align-items center
	margin 0 -.5rem
	&.right
		justify-content flex-end
	&.center
		flex-direction column
		justify-content center

.btn
	align-items center
	align-self center
	background button-color
	border none
	box-sizing border-box
	color light-color
	cursor pointer
	display inline-flex
	font-family primary-font
	font-size 1rem
	font-weight 600
	border-radius 0
	margin .5rem
	padding .7rem 1.5rem .5rem
	text-transform uppercase
	transition .3s
	vertical-align middle
	width auto
	&:hover
		background lightness(button-color, 50)
		z-index 1
	.material-icons
		font-size 21px
		margin -2px .5rem 0 0
		line-height .8rem
	&.b
		border-radius 40px
	&.c
		border-radius 10px !important
	&.big
		font-size 1.7rem
		line-height .9
		border-radius 40px 0 40px 40px
		padding 1rem 2.5rem .7rem
		.material-icons
			font-size 35px
	&.med
		font-size 1.2rem
	&.full-w
		width 100%
	&.red
		background red
		&:hover
			background lightness(red, 65) !important
	&.principal
		background primary-color
		&:hover
			background lightness(primary-color, 50)
	&.cancel
		background none
		border 1px solid primary-color
		color primary-color
		&:hover
			background lightness(primary-color, 50)
			color light-color
	&.facebook
		background #3b5998
		&:hover
			background lightness(#3b5998, 50)
	&.google
		background #db4437
		&:hover
			background lightness(#db4437, 60)


.btn-flat
	background none
	color primary-color
	align-items center
	align-self center
	border none
	border-radius 0
	box-sizing border-box
	cursor pointer
	display inline-flex
	font-size 14px
	font-weight 500
	margin .2rem
	padding .7rem 1rem
	text-transform uppercase
	transition .3s
	vertical-align middle
	width auto
	&:hover
		background button-color
		color light-color

.btn-circle
	display inline-flex
	align-items center
	border none
	width 45px
	height 45px
	min-width 45px
	background button-color
	color light-color
	justify-content center
	border-radius 50% 0 50% 50%
	align-self center
	// margin 0 1rem
	transition .3s
	cursor pointer
	&:hover
		background lightness(button-color, 50)
		transform scale(1.1)

.btn-search
	@extend .btn
	background green
	min-width 280px
	margin 0
	@media (max-width 700px)
		width 100%
		margin 0 0 1rem
	.material-icons
		font-size 24px
		margin-right .5rem
		line-height 14px
		&.arrow
			margin-right 0
			margin-left auto

button
	&.btn
		display inline-block
		.material-icons
			vertical-align middle
