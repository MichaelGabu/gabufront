.collapsible
	border-top 1px grey
	border-right 1px grey
	border-left 1px grey
	margin 1rem 0 1rem 0

	> li
		display block

.collapsible-header
	display flex
	align-items center
	cursor pointer
	padding .5rem 1rem
	background-color rgba(primary-color, .1)
	border-bottom 1px solid primary-color

	i
		width 2rem
		font-size 1.6rem
		line-height 2rem
		display block
		float left
		text-align center
		margin-right 1rem

	&.active
		background-color primary-color
		color light-color

.collapsible-body
	display none
	border-bottom 1px grey
	box-sizing border-box
	padding 2rem

// sideNav collapsible styling
.side-nav

	.collapsible
		border none
		box-shadow none

		li
			padding 0

	.collapsible-header
		background-color transparent
		border none
		line-height inherit
		height inherit
		margin 0 1rem

		i
			line-height inherit

	.collapsible-body
		border 0
		background-color light-color

		li
			a
				margin 0 1rem 0 2rem

// Popout Collapsible

.collapsible.popout
	border none
	box-shadow none
	> li
		box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
		margin 0 24px
		transition margin .35s cubic-bezier(0.250, 0.460, 0.450, 0.940)

		&.active
			box-shadow 0 5px 11px 0 rgba(0, 0, 0, 0.18), 0 4px 15px 0 rgba(0, 0, 0, 0.15)
			margin 16px 0
